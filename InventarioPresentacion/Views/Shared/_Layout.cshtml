<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventarioMVC.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

  

</head>
<body>


    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="https://png.pngtree.com/png-clipart/20191121/original/pngtree-user-icon-png-image_5097430.jpg" alt="">
                </span>

                <div class="text logo-text">
                    <span class="name">Luciano Pereyra</span>
                    <span class="profession">Administrador</span>
                </div>
            </div> 
            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">
                 
                <ul class="menu-links">
                      
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index"> 
                            <i class='bx bx-home icon'></i>
                            <span class="text nav-text">Inicio</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a   asp-area="" asp-controller="Clientes" asp-action="Clientes"> 
                            <i class='bx bx-user icon'></i>
                            <span class="text nav-text">Clientes</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a   asp-area="" asp-controller="Productos" asp-action="Productos"> 
                            <i class='bx bx-box icon'></i>
                            <span class="text nav-text">Productos</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a  asp-area="" asp-controller="Ventas" asp-action="Ventas">
                            <i class='bx bx-cart icon'></i>
                            <span class="text nav-text">Ventas</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-pie-chart-alt icon'></i>
                            <span class="text nav-text">Reportes</span>
                        </a>
                    </li>
 

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a href="#">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>
 

            </div>
        </div>

    </nav>

    <section class="home">
        <main role="main"  >
            @RenderBody()
        </main>
      
    </section>


 


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
